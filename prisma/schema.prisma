model Message {
  id                    String              @id @default(auto()) @map("_id") @db.ObjectId
  author                User                @relation(fields: [authorId], references: [discordId])
  authorId              String              @db.String
  message               Json
  message_id            String              @unique
  messageId             String
  content               String              @default("")
  deleted               Boolean             @default(false)
  edits                 Json[]              @default([])
}     

model User {      
  id                    String              @id @default(auto()) @map("_id") @db.ObjectId
  discordId             String              @db.String @unique
  email                 String
  // One to many
  messages              Message[]
  // One to One
  customSettings        CustomSettings?
}

model CustomSettings {
  // Settings     
  id                    String              @id @default(auto()) @map("_id") @db.ObjectId
  user                  User                @relation(fields: [userId], references: [id])
  userId                String              @db.ObjectId @unique
  // One to many
  pingSettings          PingSettings[]
}     

model PingSettings {      
  id                    String              @id @default(auto()) @map("_id") @db.ObjectId
  customSettings        CustomSettings      @relation(fields: [customSettingsId], references: [id])
  customSettingsId      String              @db.ObjectId
  gameName              String
  emote                 String
} 
